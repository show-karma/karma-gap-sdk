{
  "compilerOptions": {
    "lib": ["es2020"],
    "module": "commonjs",
    "target": "es2020",
    "outDir": "./.dist",
    "baseUrl": ".",
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "**/.dist",
    "**/config",
    "**/config/*",
    "**/scripts",
    "**/scripts/*",
    "node_modules",
    "./node_modules",
    "./node_modules/*",
    "./node_modules/@types/node/index.d.ts"
  ],
  "include": ["core/**/*.ts"],
  "files": ["./index.ts"]
}
